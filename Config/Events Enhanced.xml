<mod id="EventsEnhanced"
	 module="EventsEnhanced"
	 name="Events Enhanced"
	 author="Black_Imperator, ostar, xienwolf, lfgr"
	 version="1.2"
	 date="05/27/2013"
	 url="https://bitbucket.org/lfgr/some-modcomps-for-civ4-ffh-mnai/wiki/Events%20Enhanced">
	
    <options id="EventsEnhanced" file="Events Enhanced.ini">
        <section id="Events">
			<option id="HideUnavailableOptions" type="boolean" default="False"
				get="isHideUnavailableOptions" set="setHideUnavailableOptions" />
        </section>
        <section id="WorldUnitPopups">
			<option id="WUPopupHuman" type="boolean" default="True"
				get="isWUPopupHuman" set="setWUPopupHuman" />
			<option id="WUPopupAI" type="boolean" default="True"
				get="isWUPopupAI" set="setWUPopupAI" />
        </section>
        <section id="GreatPersonMod">
			<option id="GPPopupHuman" type="boolean" default="True"
				get="isGPPopupHuman" set="setGPPopupHuman" />
			<option id="GPPopupAI" type="boolean" default="False"
				get="isGPPopupAI" set="setGPPopupAI" />
        </section>
    </options>
	
	<event type="unitBuilt" function="onUnitBuilt"/>
	<event type="combatResult" function="onCombatResult"/>
</mod>
